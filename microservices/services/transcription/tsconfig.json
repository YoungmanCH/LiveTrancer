{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // コンパイル後の出力ディレクトリ
    "rootDir": "./src"  // ソースディレクトリ
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
